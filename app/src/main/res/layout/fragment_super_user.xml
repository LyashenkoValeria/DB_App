<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/super_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Работа с контентом"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginVertical="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/super_add_book"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        android:text="Добавить книгу"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/super_content" />

    <Button
        android:id="@+id/super_add_film"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Добавить фильм"
        app:layout_constraintEnd_toEndOf="@+id/super_add_book"
        app:layout_constraintStart_toStartOf="@+id/super_add_book"
        app:layout_constraintTop_toBottomOf="@+id/super_add_book" />

    <Button
        android:id="@+id/super_add_music"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Добавить музыку"
        app:layout_constraintEnd_toEndOf="@+id/super_add_film"
        app:layout_constraintStart_toStartOf="@+id/super_add_film"
        app:layout_constraintTop_toBottomOf="@+id/super_add_film" />

    <Button
        android:id="@+id/super_add_top_book"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Добавить книжный топ"
        app:layout_constraintEnd_toEndOf="@+id/super_add_music"
        app:layout_constraintStart_toStartOf="@+id/super_add_music"
        app:layout_constraintTop_toBottomOf="@+id/super_add_music" />

    <Button
        android:id="@+id/super_add_top_film"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Добавить топ фильмов"
        app:layout_constraintEnd_toEndOf="@+id/super_add_top_book"
        app:layout_constraintStart_toStartOf="@+id/super_add_top_book"
        app:layout_constraintTop_toBottomOf="@+id/super_add_top_book" />

    <Button
        android:id="@+id/super_add_top_music"
        style="@style/Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="Добавить музыкальный топ"
        app:layout_constraintEnd_toEndOf="@+id/super_add_top_film"
        app:layout_constraintStart_toStartOf="@+id/super_add_top_film"
        app:layout_constraintTop_toBottomOf="@+id/super_add_top_film" />

