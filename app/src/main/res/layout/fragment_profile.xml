<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/prof_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:fontFamily="@font/lato"
        android:gravity="center_horizontal"
        android:text="@string/prof_str"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/table_layout_prof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prof_text">

        <TableRow>

            <TextView
                android:id="@+id/user_login_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lato"
                android:text="@string/log_str"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/user_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lato"
                android:text="Cat123"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/edit_login_button"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/user_password_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lato"
                android:text="@string/pass_str"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/user_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lato"
                android:inputType="textPassword"
                android:text="Cat123"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/edit_password_button"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="parent" />
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/user_email_text"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="@font/lato"
                android:text="@string/email_str"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/user_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lato"
                android:text="user123@mail.ru"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/edit_email_button"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="parent" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/edit_prof"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="#3F51B5"
        android:fontFamily="@font/lato"
        android:text="@string/change_genre_str"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/table_layout_prof" />
</androidx.constraintlayout.widget.ConstraintLayout>
