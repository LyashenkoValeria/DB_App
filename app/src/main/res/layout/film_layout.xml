<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/film_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/film_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:src="@drawable/film_def"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TableLayout
                android:id="@+id/table_layout_film"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/film_poster">

                <TableRow>

                    <TextView
                        android:id="@+id/film_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:gravity="center_horizontal"
                        android:text="@string/name_str"
                        android:textColor="#000000"
                        android:textSize="20sp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/film_year_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/year_str"
                        android:textColor="#444b52"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/film_year"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="2000"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/film_dur_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/dur_str"
                        android:textColor="#444b52"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/film_dur"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="142 мин"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/film_actor_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/actor_str"
                        android:textColor="#444b52"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/film_actor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="Дэниэл Рэдклифф"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/film_maker_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/maker_str"
                        android:textColor="#444b52"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/film_maker"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="Альфонсо Куарон"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/film_genre_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/genre_str"
                        android:textColor="#444b52"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/film_genre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="Фэнтези"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/film_series_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/film_series_str"
                        android:textColor="#444b52"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/film_series"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="Гарри Поттер"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/film_book_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/book_film_str"
                        android:textColor="#444b52"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/film_book"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="Гарри Поттер и узник Азкабана"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/film_music_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/mus_film_str"
                        android:textColor="#444b52"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/film_music"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="John Williams — Lumos!"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </TableRow>


                <TableRow>

                    <TextView
                        android:id="@+id/film_top_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/top_str"
                        android:textColor="#444b52"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/film_top"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="250 лучших фильмов"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/film_pos_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/pos_str"
                        android:textColor="#444b52"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/film_pos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/film_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/lato"
                android:text="@string/desc_str"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/table_layout_film" />

            <RatingBar
                android:id="@+id/film_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/film_desc" />

            <Button
                android:id="@+id/like_film"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_baseline_favorite_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/film_rating"
                app:layout_constraintTop_toBottomOf="@+id/film_desc" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
