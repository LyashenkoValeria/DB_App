<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/music_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/music_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:src="@drawable/music_def"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TableLayout
                android:id="@+id/table_layout_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/music_poster">

                <TableRow>

                    <TextView
                        android:id="@+id/music_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:gravity="center_horizontal"
                        android:text="@string/name_str"
                        android:textColor="#000000"
                        android:textSize="20sp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/music_year_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/year_str"
                        android:textColor="#444b52"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/music_year"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="2000"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/music_dur_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/dur_str"
                        android:textColor="#444b52"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/music_dur"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="3 мин"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/music_author_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/author_str"
                        android:textColor="#444b52"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/music_author"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="Imagine Dragons"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/music_genre_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/genre_str"
                        android:textColor="#444b52"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/music_genre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="Рок"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/music_album_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/album_str"
                        android:textColor="#444b52"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/music_album"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="Origins"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/music_top_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/top_str"
                        android:textColor="#444b52"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/music_top"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="250 лучших песен"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/music_pos_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lato"
                        android:text="@string/pos_str"
                        android:textColor="#444b52"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/music_pos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/lato"
                        android:text="1"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                </TableRow>
            </TableLayout>

            <RatingBar
                android:id="@+id/music_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/table_layout_music" />

            <Button
                android:id="@+id/like_music"
                android:layout_width="50dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_favorite_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/music_rating"
                app:layout_constraintTop_toBottomOf="@+id/table_layout_music" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
